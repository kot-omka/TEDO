	НовыйРаздел.НомерРаздела = НомерРаздела;
	НовыйРаздел.Наименование = "" + Формат(НомерРаздела,"ЧЦ=2; ЧВН=") + ".";
	НовыйРаздел.Записать();
	
	Возврат НовыйРаздел.Ссылка;
	
