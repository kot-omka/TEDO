
&НаКлиенте
Процедура ЗаполнитьПараметрыИзКурса(Команда)
	
	Отказ = Ложь;
	
	Если Не ЗначениеЗаполнено(Объект.ТипСайта) Тогда
		СообщитьПользователю("Не заполнен тип сайта", Отказ);
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(Объект.Курс) Тогда
		СообщитьПользователю("Не выбран курс", Отказ);
	КонецЕсли;
	
	Если Отказ Тогда 
		Возврат
	КонецЕсли;
	
	
	ЗаполнитьПараметрыИзКурсаНаСервере();
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьПараметрыИзКурсаНаСервере()
	
	Объект.Предприятие = "";
	Объект.ДваСимвола = "";
	Объект.ДопПараметрРаздела = "";
	
	Запрос = Новый Запрос;
	
	Если Объект.ТипСайта = "dist" Тогда
		Запрос.Текст = ТекстЗапроса_Параметры_dist();
	ИначеЕсли Объект.ТипСайта = "free" Тогда
		Запрос.Текст = ТекстЗапроса_ЗаполнитьПараметры_free();
	КонецЕсли;
	
	Запрос.УстановитьПараметр("Курс", Объект.Курс);
	РезультатЗапроса = Запрос.Выполнить();
	
	Если РезультатЗапроса.Пустой() Тогда
		Возврат;
	КонецЕсли;
	
	Выборка= РезультатЗапроса.Выбрать();
	Выборка.Следующий();
	ЗаполнитьЗначенияСвойств(Объект, Выборка);
	
	Если Выборка.УменьшитьНаименованиеПредприятияВЗапросе И 
		Выборка.НомерРазделаСКоторогоУменьшатьНаименованиеПредприятия <= Объект.НомерРаздела Тогда
		
		Объект.УменьшитьНаименованиеПредприятия = Истина;
	Иначе
		Объект.УменьшитьНаименованиеПредприятия = Ложь;
	КонецЕсли;
	
КонецПроцедуры

